<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OAuthV2 async="false" continueOnError="false" enabled="true" name="OA-GenerateAccessTokenImplicit">
    <DisplayName>OA-GenerateAccessTokenImplicit</DisplayName>
    <Attributes>
        <Attribute name="external_access_token" ref="ext_access_token"/>
        <Attribute name="external_refresh_token" ref="ext_refresh_token"/>
        <Attribute name="external_id_token" ref="ext_id_token"/>
    </Attributes>
    <Operation>GenerateAccessTokenImplicitGrant</Operation>
    <ClientId>app_client_id</ClientId>
    <ResponseType>app_response_type_implicit</ResponseType>
    <RedirectUri>app_redirect_uri</RedirectUri>
    <State>app_state</State>
    <!-- Scope apparently isn't used in Implicit flow, Edge generates a param named scope but its empty -->
    <Scope>app_scope</Scope>
    <GenerateResponse enabled="false"/>
    <Tokens/>
</OAuthV2>